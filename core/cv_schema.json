{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "sections": {
      "type": "object",
      "description": "Container for all CV sections",
      "properties": {
        "summary": {
          "type": "string",
          "description": "Summary section content",
          "minLength": 50
        },
        "education": {
          "type": "string",
          "description": "Education section content",
          "minLength": 50
        },
        "experience": {
          "type": "string",
          "description": "Experience section content",
          "minLength": 50
        },
        "skills": {
          "type": "string",
          "description": "Skills section content",
          "minLength": 20
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["sections"],
  "additionalProperties": false
}
